<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD2222"
    tools:context=".CreateAClass">

    <Button
        android:id="@+id/cancelCreate"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="26dp"
        android:alpha="1"
        android:backgroundTint="#CEB326"
        android:fontFamily="@font/orienta"
        android:text="Cancel"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/createError"
        app:layout_constraintEnd_toStartOf="@+id/createClass"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classDescription" />

    <Button
        android:id="@+id/createClass"
        android:layout_width="101dp"
        android:layout_height="58dp"
        android:layout_marginEnd="68dp"
        android:alpha="1"
        android:backgroundTint="#CEB326"
        android:fontFamily="@font/orienta"
        android:text="Create Class"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cancelCreate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cancelCreate"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/classSection"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginBottom="19dp"
        android:background="#CEB326"
        android:ems="10"
        android:fontFamily="@font/orienta"
        android:hint="Class Section: Ex 2"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/classDescription"
        app:layout_constraintEnd_toEndOf="@+id/classTime"
        app:layout_constraintStart_toStartOf="@+id/classTime"
        app:layout_constraintTop_toBottomOf="@+id/classTime" />

    <EditText
        android:id="@+id/classTime"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginBottom="19dp"
        android:background="#CEB326"
        android:ems="10"
        android:fontFamily="@font/orienta"
        android:hint="Class Time: Ex 11:00-11:50am"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/classSection"
        app:layout_constraintEnd_toEndOf="@+id/className"
        app:layout_constraintStart_toStartOf="@+id/className"
        app:layout_constraintTop_toBottomOf="@+id/className" />

    <TextView
        android:id="@+id/sClasses2"
        android:layout_width="337dp"
        android:layout_height="54dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="12dp"
        android:alpha="1"
        android:background="#CEB326"
        android:text="Create-A-Class"
        android:textAlignment="center"
        android:textColor="#0E0E0E"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/className"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/className"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginBottom="19dp"
        android:background="#CEB326"
        android:ems="10"
        android:fontFamily="@font/orienta"
        android:hint="Class Name: Ex Coms-309"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/classTime"
        app:layout_constraintEnd_toEndOf="@+id/sClasses2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sClasses2"
        app:layout_constraintTop_toBottomOf="@+id/sClasses2" />

    <EditText
        android:id="@+id/classDescription"
        android:layout_width="332dp"
        android:layout_height="156dp"
        android:layout_marginBottom="37dp"
        android:background="#CEB326"
        android:gravity="top|left"
        android:hint="Short Class Description"
        android:inputType="textMultiLine"
        android:lines="6"
        android:overScrollMode="always"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:scrollHorizontally="false"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:layout_constraintBottom_toTopOf="@+id/cancelCreate"
        app:layout_constraintEnd_toEndOf="@+id/classSection"
        app:layout_constraintStart_toStartOf="@+id/classSection"
        app:layout_constraintTop_toBottomOf="@+id/classSection" />

    <TextView
        android:id="@+id/createError"
        android:layout_width="202dp"
        android:layout_height="59dp"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="112dp"
        android:fontFamily="@font/orienta"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cancelCreate" />

</androidx.constraintlayout.widget.ConstraintLayout>