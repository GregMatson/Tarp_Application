<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD2222"
    tools:ignore="SpeakableTextPresentCheck"
    tools:context=".StudentEditProfile">

  <Button
      android:id="@+id/sConfirmEdit"
      android:layout_width="112dp"
      android:layout_height="48dp"
      android:layout_marginTop="26dp"
      android:backgroundTint="#CEB326"
      android:fontFamily="@font/orienta"
      android:text="Confirm"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="15sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/sEditNewPassCon"
      app:layout_constraintStart_toEndOf="@+id/sCancelEdit"
      app:layout_constraintTop_toBottomOf="@+id/sEditNewPassCon"
      tools:ignore="TextContrastCheck" />

  <Button
      android:id="@+id/sCancelEdit"
      android:layout_width="112dp"
      android:layout_height="48dp"
      android:layout_marginEnd="66dp"
      android:backgroundTint="#CEB326"
      android:fontFamily="@font/orienta"
      android:text="Cancel"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="15sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/sConfirmEdit"
      app:layout_constraintEnd_toStartOf="@+id/sConfirmEdit"
      app:layout_constraintStart_toStartOf="@+id/sEditNewPassCon"
      app:layout_constraintTop_toTopOf="@+id/sConfirmEdit"
      tools:ignore="TextContrastCheck" />

  <EditText
      android:id="@+id/sEditLastName"
      android:layout_width="290dp"
      android:layout_height="48dp"
      android:layout_marginTop="14dp"
      android:background="#CEB326"
      android:fontFamily="@font/orienta"
      android:hint="Last Name"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="25sp"
      android:textStyle="bold"
      android:inputType="textNoSuggestions"
      app:layout_constraintEnd_toEndOf="@+id/sEditName"
      app:layout_constraintStart_toStartOf="@+id/sEditName"
      app:layout_constraintTop_toBottomOf="@+id/sEditName" />

  <EditText
      android:id="@+id/sEditNewPass"
      android:layout_width="290dp"
      android:layout_height="48dp"
      android:layout_marginTop="14dp"
      android:background="#CEB326"
      android:fontFamily="@font/orienta"
      android:hint="New Password"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="25sp"
      android:textStyle="bold"
      android:inputType="textPassword"
      app:layout_constraintEnd_toEndOf="@+id/sEditPass"
      app:layout_constraintStart_toStartOf="@+id/sEditPass"
      app:layout_constraintTop_toBottomOf="@+id/sEditPass" />

  <EditText
      android:id="@+id/sEditUser"
      android:layout_width="290dp"
      android:layout_height="48dp"
      android:layout_marginTop="12dp"
      android:background="#CEB326"
      android:fontFamily="@font/orienta"
      android:hint="UserName"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="25sp"
      android:textStyle="bold"
      android:inputType="textNoSuggestions"
      app:layout_constraintEnd_toEndOf="@+id/sEditLastName"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/sEditLastName"
      app:layout_constraintTop_toBottomOf="@+id/sEditLastName"
      tools:ignore="SpeakableTextPresentCheck" />

  <EditText
      android:id="@+id/sEditEmail"
      android:layout_width="290dp"
      android:layout_height="48dp"
      android:layout_marginTop="14dp"
      android:background="#CEB326"
      android:fontFamily="@font/orienta"
      android:hint="Email"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="25sp"
      android:textStyle="bold"
      android:inputType="textNoSuggestions"
      app:layout_constraintEnd_toEndOf="@+id/sEditUser"
      app:layout_constraintStart_toStartOf="@+id/sEditUser"
      app:layout_constraintTop_toBottomOf="@+id/sEditUser" />

  <EditText
      android:id="@+id/sEditPass"
      android:layout_width="290dp"
      android:layout_height="48dp"
      android:layout_marginTop="14dp"
      android:background="#CEB326"
      android:fontFamily="@font/orienta"
      android:hint="Old Password"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="25sp"
      android:textStyle="bold"
      android:inputType="textPassword"
      app:layout_constraintEnd_toEndOf="@+id/sEditEmail"
      app:layout_constraintStart_toStartOf="@+id/sEditEmail"
      app:layout_constraintTop_toBottomOf="@+id/sEditEmail" />

  <EditText
      android:id="@+id/sEditNewPassCon"
      android:layout_width="290dp"
      android:layout_height="48dp"
      android:layout_marginTop="14dp"
      android:background="#CEB326"
      android:fontFamily="@font/orienta"
      android:hint="Confirm New Password"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="25sp"
      android:textStyle="bold"
      android:inputType="textPassword"
      app:layout_constraintEnd_toEndOf="@+id/sEditNewPass"
      app:layout_constraintStart_toStartOf="@+id/sEditNewPass"
      app:layout_constraintTop_toBottomOf="@+id/sEditNewPass" />

  <EditText
      android:id="@+id/sEditName"
      android:layout_width="290dp"
      android:layout_height="48dp"
      android:layout_marginTop="45dp"
      android:background="#CEB326"
      android:fontFamily="@font/orienta"
      android:hint="First Name"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="25sp"
      android:textStyle="bold"
      android:inputType="textNoSuggestions"
      app:layout_constraintEnd_toEndOf="@+id/editProfile"
      app:layout_constraintStart_toStartOf="@+id/editProfile"
      app:layout_constraintTop_toBottomOf="@+id/editProfile" />

  <TextView
      android:id="@+id/editProfile"
      android:layout_width="290dp"
      android:layout_height="45dp"
      android:layout_marginStart="60dp"
      android:layout_marginTop="43dp"
      android:layout_marginEnd="61dp"
      android:background="#CEB326"
      android:backgroundTint="#CEB326"
      android:fontFamily="@font/orienta"
      android:text="Edit Profile"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/sEditMessage"
      android:layout_width="125dp"
      android:layout_height="56dp"
      android:layout_marginTop="86dp"
      android:fontFamily="@font/orienta"
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="15sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="@+id/sConfirmEdit"
      app:layout_constraintStart_toStartOf="@+id/sCancelEdit"
      app:layout_constraintTop_toBottomOf="@+id/sEditNewPassCon" />

</androidx.constraintlayout.widget.ConstraintLayout>