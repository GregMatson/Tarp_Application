<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#CD2222"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/sendMessage"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginStart="256dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="#CEB326"
        android:fontFamily="@font/orienta"
        android:text="Send"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/enterMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterMessage" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:backgroundTint="#CEB326"
        android:fontFamily="@font/orienta"
        android:text="Back"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sendMessage"
        app:layout_constraintStart_toStartOf="@+id/enterMessage"
        app:layout_constraintTop_toTopOf="@+id/sendMessage" />

    <TextView
        android:id="@+id/chatLog"
        android:layout_width="300dp"
        android:layout_height="420dp"
        android:layout_marginBottom="232dp"
        android:background="#CEB326"
        android:fontFamily="@font/orienta"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/enterMessage"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:background="#CEB326"
        android:ems="10"
        android:fontFamily="@font/orienta"
        android:hint="Message"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/chatLog"
        app:layout_constraintStart_toStartOf="@+id/chatLog"
        app:layout_constraintTop_toBottomOf="@+id/chatLog" />
</androidx.constraintlayout.widget.ConstraintLayout>